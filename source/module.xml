<?xml version="1.0" encoding="utf-8" ?>
<module>
    <resources>
        <resource path="assets/css" prefix="css" />
        <resource path="assets/views" prefix="views" />
        <resource path="assets/themes" prefix="themes" />
        <resource path="assets/locales" prefix="locales" />
        <resource path="source/fakedata" prefix="source/fakedata" />
        <resource path="source/views" prefix="source/views" />
        <resource path="source/views/fakeemployeeapp" prefix="source/views/fakeemployeeapp" />
        <resource path="source/windows" prefix="source/windows" />
        <resource path="source/custom" prefix="source/custom" />
    </resources>

    <components>
        <component package="custom" />
    </components>

    <themes>
        <default>
            <style resource="themes/default/main.css" />
        </default>
    </themes>

    <locales>
        <locale id="en">
            <resource path="locales/en.properties" />
        </locale>
        <locale id="en_US">
            <resource path="locales/en_US.properties" />
        </locale>
        <locale id="ru">
            <resource path="locales/ru.properties" />
        </locale>
        <locale id="fr">
            <resource path="locales/fr.properties" />
        </locale>
        <locale id="pl">
            <resource path="locales/pl.properties" />
        </locale>
        <locale id="cy">
            <resource path="locales/cy.properties" />
        </locale>
    </locales>
</module>