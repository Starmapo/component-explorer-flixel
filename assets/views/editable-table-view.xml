<vbox width="100%" style="padding:10px;">
    <section-header text="Editable Tables" />

    <style>
        .editable-table .item-renderer {
            padding: 0;
        }
        .editable-table .item-renderer .textfield {
            border: none;
            background: none;
            filter: none;
        }
        .editable-table .item-renderer .textfield:active {
            border: 1px solid $accent-color;
        }
    </style>
	<tableview width="100%" height="200" styleName="editable-table">
		<header width="100%">
			<column id="colA" text="Column A" width="100%" />
			<column id="colB" text="Column B" width="100%" />
			<column id="colC" text="Column C" width="100%" />
		</header>

		<item-renderer>
			<textfield id="colA" width="100%" />
		</item-renderer>
		<item-renderer>
			<textfield id="colB" width="100%" />
		</item-renderer>
		<item-renderer>
			<textfield id="colC" width="100%" />
		</item-renderer>

		<data>
			<item colA="Item 1A" colB="Item 1B" colC="Item 1C" /> 
			<item colA="Item 2A" colB="Item 2B" colC="Item 2C" /> 
			<item colA="Item 3A" colB="Item 3B" colC="Item 3C" /> 
			<item colA="Item 4A" colB="Item 4B" colC="Item 4C" /> 
			<item colA="Item 5A" colB="Item 5B" colC="Item 5C" /> 
			<item colA="Item 6A" colB="Item 6B" colC="Item 6C" /> 
			<item colA="Item 7A" colB="Item 7B" colC="Item 7C" /> 
			<item colA="Item 8A" colB="Item 8B" colC="Item 8C" /> 
			<item colA="Item 9A" colB="Item 9B" colC="Item 9C" /> 
		</data>
	</tableview>
</vbox>