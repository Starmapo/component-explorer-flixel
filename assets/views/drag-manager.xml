<vbox width="100%" height="100%" style="padding:10px;">
    <!--
        Note: in order to use "draggable" on any component, the haxeui flag "-D haxeui-allow-drag-any-component" must be set. 
              setting this flag will add an "implements Draggable" on the core haxeui Component class
    -->
    <section-header text="Basic Drag" />
    
    <box id="box1" width="50" height="50" style="background-color: #2D70E7;border:1px solid #2D70E7;background-opacity: .1" draggable="true" />

    <section-header text="Mouse Target" />
    
    <box id="box2" width="50" height="50" style="background-color: grey;border:1px solid grey;background-opacity: .1">
        <box id="mouseTargetBox2" width="25" height="25" style="background-color: #2D70E7;border:1px solid #2D70E7;background-opacity: .1" verticalAlign="bottom" horizontalAlign="right" />
    </box>    
    
    <section-header text="Drag Bounds" />
    
    <box width="600" height="300" style="background-color: grey;border:1px solid grey;background-opacity: .1">
        <box id="box3" width="50" height="50" style="background-color: #2D70E7;border:1px solid #2D70E7;background-opacity: .1" />
    </box>
    
    <section-header text="Styles" />
    <style>
        .button {
            opacity: 1;
        }
    
        .button.draggable {
            border: 1px solid #2D70E7;
        }
        
        .button.dragging {
            opacity: .2;
        }
    </style>
    <button text="Drag me!" draggable="true" />
    <button text="Me too!" draggable="true" />
    <button text="Not me!" />
    
</vbox>