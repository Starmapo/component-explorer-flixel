<vbox style="padding:10px;">
    <section-header text="Open / Save File Dialogs" />
    <hbox>
        <vbox>
            <button id="openImageFile" text="Open Image File" width="100%" />
            <!-- Other ways of doing the same thing -->
            <button id="openImageFile2" text="Open Image File (Alt 1)" />
            <button id="openImageFile3" text="Open Image File (Alt 2)" />
            <rule />
            <button id="openTextFile" text="Open Text File" width="100%" />
            <!-- Other ways of doing the same thing -->
            <button id="openTextFile2" text="Open Text File (Alt 1)" width="100%" />
            <button id="openTextFile3" text="Open Text File (Alt 2)" width="100%" />
        </vbox>    
        
        <tab-view id="dataViewTabs" width="300" height="400" tabPosition="bottom" styleName="full-width-buttons">
            <box text="Image" width="100%" height="100%">
                <scrollview width="100%" height="100%" styleName="no-padding">
                    <image id="bytesDataView" imageScale=".5" />    
                </scrollview>
            </box>
            <box text="Text" width="100%" height="100%">
                <textarea id="textDataView" text="" width="100%" height="100%" />    
            </box>
        </tab-view>
        
        <vbox>
            <button id="saveImageFile" text="Save Image File" width="100%" />
            <button id="saveImageFile2" text="Save Image File (Alt 1)" />
            <button id="saveImageFile3" text="Save Image File (Alt 2)" />
            <rule />
            <button id="saveTextFile" text="Save Text File" width="100%" />
            <button id="saveTextFile2" text="Save Text File (Alt 1)" width="100%" />
            <button id="saveTextFile3" text="Save Text File (Alt 2)" width="100%" />
        </vbox> 
    </hbox>    
</vbox>