<?xml version="1.0" encoding="utf-8" ?>
<vbox>
    <hbox width="100%">
        <vbox width="100%">
            <section-header text="Default Property Grids" />
            
            <hbox>
                <property-grid id="pg1" width="250" height="300">
                    <property-group text="Primary Group">
                        <property id="stringProp" label="String Property" value="Value 1" />
                        <property id="boolProp" label="Bool Property" type="boolean" value="true" />
                        <property id="intProp" label="Int Property" type="int" value="101" />
                        <property id="listProp" label="List Property" type="list" value="Item 1">
                            <data>
                                <item text="Item 1" />
                                <item text="Item 2" />
                                <item text="Item 3" />
                                <item text="Item 4" />
                                <item text="Item 5" />
                                <item text="Item 6" />
                            </data>
                        </property>    
                    </property-group>
                    
                    <property-group text="Secondary Group">
                        <property label="String Property" value="Value 2" />
                        <property label="Bool Property" type="boolean" value="false" />
                        <property label="Int Property" type="int" value="102" />
                        <property label="List Property" type="list" value="Item 2">
                            <data>
                                <item text="Item 1" />
                                <item text="Item 2" />
                                <item text="Item 3" />
                                <item text="Item 4" />
                                <item text="Item 5" />
                                <item text="Item 6" />
                            </data>
                        </property>    
                    </property-group>
                    
                    <property-group text="Tertiary Group">
                        <property label="String Property" value="Value 3" />
                        <property label="Bool Property" type="boolean" value="true" />
                        <property label="Int Property" type="int" value="103" />
                        <property label="List Property" type="list" value="Item 3">
                            <data>
                                <item text="Item 1" />
                                <item text="Item 2" />
                                <item text="Item 3" />
                                <item text="Item 4" />
                                <item text="Item 5" />
                                <item text="Item 6" />
                            </data>
                        </property>    
                    </property-group>
                </property-grid>
                
                <property-grid id="pg2" width="250" height="300">
                    <property-group text="Primary Group">
                        <hbox verticalAlign="center">
                            <checkbox selected="true" verticalAlign="center" />
                            <switch verticalAlign="center" />
                        </hbox>
                        <property id="stringProp" label="String Property" value="Value 1" />
                        <property id="boolProp" label="Bool Property" type="boolean" value="true" />
                        <property id="intProp" label="Int Property" type="int" value="101" />
                        <property id="listProp" label="List Property" type="list" value="Item 1">
                            <data>
                                <item text="Item 1" />
                                <item text="Item 2" />
                                <item text="Item 3" />
                                <item text="Item 4" />
                                <item text="Item 5" />
                                <item text="Item 6" />
                            </data>
                        </property>    
                    </property-group>
                    
                    <property-group text="Secondary Group">
                        <progress indeterminate="true" width="50" verticalAlign="center" />
                        <property label="String Property" value="Value 2" />
                        <property label="Bool Property" type="boolean" value="false" />
                        <property label="Int Property" type="int" value="102" />
                        <property label="List Property" type="list" value="Item 2">
                            <data>
                                <item text="Item 1" />
                                <item text="Item 2" />
                                <item text="Item 3" />
                                <item text="Item 4" />
                                <item text="Item 5" />
                                <item text="Item 6" />
                            </data>
                        </property>    
                    </property-group>
                    
                    <property-group text="Tertiary Group">
                        <hbox verticalAlign="center">
                            <image resource="assets/icons/logo-haxe.png" />
                            <image resource="assets/icons/logo-javascript.png" />
                            <image resource="assets/icons/Status_Available.png" />
                        </hbox>
                        <property label="String Property" value="Value 3" />
                        <property label="Bool Property" type="boolean" value="true" />
                        <property label="Int Property" type="int" value="103" />
                        <property label="List Property" type="list" value="Item 3">
                            <data>
                                <item text="Item 1" />
                                <item text="Item 2" />
                                <item text="Item 3" />
                                <item text="Item 4" />
                                <item text="Item 5" />
                                <item text="Item 6" />
                            </data>
                        </property>    
                    </property-group>
                </property-grid>
            </hbox>
            
        </vbox>
        
        <vbox width="200">
            <section-header text="Options" />
            <checkbox text="Disable" onchange="pg1.disabled = pg2.disabled = this.selected" />
        </vbox>
    </hbox>     
</vbox>