<vbox style="padding:10px;">
    <section-header text="Built In Animations" />
    <frame text="Fade In / Out">
        <hbox>
            <vbox>
                <button text="Fade Out" onclick="lv1.fadeOut();" />
                <button text="Fade In" onclick="lv1.fadeIn();" width="100%" />
            </vbox>
            <listview id="lv1" width="200" height="150">
                <data>
                    <item text="Haxe" icon="icons/logo-haxe.png" />
                    <item text="Java" icon="icons/logo-java.png" />
                    <item text="Javascript" icon="icons/logo-javascript.png" />
                    <item text="C++" icon="icons/logo-cpp.png" />
                    <item text="PHP" icon="icons/logo-php.png" />
                    <item text="C#" icon="icons/logo-cs.png" />
                    <item text="F#" icon="icons/logo-fs.png" />
                    <item text="OCaml" icon="icons/logo-ocaml.png" />
                    <item text="Assembler" icon="icons/logo-asm.png" />
                </data>
            </listview>
        </hbox>
    </frame>
    
    <section-header text="Animations Tools (static extension)" />
    <hbox>
        <vbox>
            <hbox>
                <button id="shakeHorizontally" text="Shake Horizontally" />
                <button id="shakeVertically" text="Shake Vertically" />
                <button id="shakeBoth" text="Shake Both" />
            </hbox>
            <hbox>
                <button id="flashDefault" text="Flash" />
                <button id="flashBlue" text="Flash Blue" />
            </hbox>
            <hbox>
                <button id="chain" text="Chain" />
            </hbox>
        </vbox>   
        <frame width="200" height="100%">
            <box width="100%" height="100%">
                <textfield id="animationTarget1" verticalAlign="center" horizontalAlign="center" text="Example Field" />
            </box>
        </frame>
    </hbox>    
</vbox>