<vbox width="100%" height="100%">
    <section-header text="Basic Tooltips" />
    <button text="Basic Tooltip" tooltip="This is a tooltip" />
    <slider tooltip="Click to set value" />
    
    <hbox>
        <listview width="200" height="150">
            <data>
                <item text="Haxe" icon="assets/icons/logo-haxe.png" tooltip="Haxe Language" />
                <item text="Java" icon="assets/icons/logo-java.png" tooltip="Java Language" />
                <item text="Javascript" icon="assets/icons/logo-javascript.png" tooltip="Javascript Language" />
                <item text="C++" icon="assets/icons/logo-cpp.png" tooltip="C++ Language" />
                <item text="PHP" icon="assets/icons/logo-php.png" tooltip="PHP Language" />
                <item text="C#" icon="assets/icons/logo-cs.png" tooltip="C# Language" />
                <item text="F#" icon="assets/icons/logo-fs.png" tooltip="F# Language" />
                <item text="OCaml" icon="assets/icons/logo-ocaml.png" tooltip="OCaml Language" />
                <item text="Assembler" icon="assets/icons/logo-asm.png" tooltip="Assembler Language" />
            </data>
        </listview>
        
        <tabview width="400" height="150">
            <box text="Haxe" icon="assets/icons/logo-haxe.png" tooltip="Haxe Language" width="100%" height="100%"><label text="Any component can have tooltips!" verticalAlign="center" horizontalAlign="center" /> </box>
            <box text="Java" icon="assets/icons/logo-java.png" tooltip="Java Language" />
            <box text="Javascript" icon="assets/icons/logo-javascript.png" tooltip="Javascript Language" />
            <box text="C++" icon="assets/icons/logo-cpp.png" tooltip="C++ Language" />
            <box text="PHP" icon="assets/icons/logo-php.png" tooltip="PHP Language" />
            <box text="C#" icon="assets/icons/logo-cs.png" tooltip="C# Language" />
            <box text="F#" icon="assets/icons/logo-fs.png" tooltip="F# Language" />
            <box text="OCaml" icon="assets/icons/logo-ocaml.png" tooltip="OCaml Language" />
            <box text="Assembler" icon="assets/icons/logo-asm.png" tooltip="Assembler Language" />
        </tabview>
    </hbox>    
    
    <section-header text="Custom Tooltips" />
    <box width="100%" height="100%">
        <button text="Custom Tooltip" id="customTooltip1" horizontalAlign="left" verticalAlign="top" />
        <button text="Custom Tooltip" id="customTooltip2" horizontalAlign="center" verticalAlign="top" />
        <button text="Custom Tooltip" id="customTooltip3" horizontalAlign="right" verticalAlign="top" />
        
        <button text="Custom Tooltip" id="customTooltip4" horizontalAlign="left" verticalAlign="center" />
        <button text="Custom Tooltip" id="customTooltip5" horizontalAlign="center" verticalAlign="center" />
        <button text="Custom Tooltip" id="customTooltip6" horizontalAlign="right" verticalAlign="center" />
        
        <button text="Custom Tooltip" id="customTooltip7" horizontalAlign="left" verticalAlign="bottom" />
        <button text="Custom Tooltip" id="customTooltip8" horizontalAlign="center" verticalAlign="bottom" />
        <button text="Custom Tooltip" id="customTooltip9" horizontalAlign="right" verticalAlign="bottom" />
    </box>
</vbox>